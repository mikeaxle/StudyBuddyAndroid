<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/connectionErrorToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        app:navigationIcon="@drawable/ic_curved_up_black" />

    <ImageView
        android:id="@+id/connectionerrorlogoImageView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:srcCompat="@mipmap/ic_logo" />

    <ImageView
        android:id="@+id/connectionErrorIconImageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_error" />

    <TextView
        android:id="@+id/connectionErrorLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="20dp"
        android:text="No network connection found. \n\nYou need a data connection to perform this action. Please check your connection and try again."
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/connectionErrorButton"
        style="@style/PaperButton"
        android:background="@drawable/question_background"
        android:text="Try Again" />

</LinearLayout>